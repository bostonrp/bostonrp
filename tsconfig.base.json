{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./src/@types", "./node_modules/@ragempcommunity"],

        "baseUrl": ".",
        "removeComments": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "esNext",
        "strict": true,
        "target": "esNext",
        "outDir": "./packages",
        "importHelpers": true,
        "rootDir": ".",
        "allowSyntheticDefaultImports": true,
        "declaration": false
    },

    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "packages", "**/*.json"]
}
